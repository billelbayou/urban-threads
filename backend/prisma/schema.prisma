generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  role       Role      @default(CLIENT)
  orders     Order[]
  cart       Cart?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  wishlist   Wishlist?
  phone      String?
  avatarUrl  String?
  address    String?
  city       String?
  country    String?
  postalCode String?
}

model Product {
  id           String         @id @default(uuid())
  name         String
  description  String
  price        Float
  category     Category       @relation(fields: [categoryId], references: [id])
  categoryId   String
  stock        Int
  images       Json[]
  orderItems   OrderItem[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  productStats ProductStats[]
  cartItems    CartItem[]
  wishlist     Wishlist?      @relation(fields: [wishlistId], references: [id])
  wishlistId   String?
  infoSections Json[]
  tags         String[]
}

model Category {
  id        String     @id @default(uuid())
  name      String
  slug      String
  parentId  String?
  parent    Category?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: Cascade)
  children  Category[] @relation("CategoryToCategory")
  products  Product[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([slug, parentId])
}

model Wishlist {
  id       String    @id @default(uuid())
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String    @unique
  products Product[]
}

model Order {
  id        String      @id @default(uuid())
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  total     Float
  status    OrderStatus @default(PENDING)
  items     OrderItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  price     Float
  size      String
}

model ProductStats {
  id           String  @id @default(uuid())
  product      Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    String  @unique // Added unique to ensure one stats record per product
  views        Int     @default(0)
  soldQuantity Int     @default(0)
}

model Cart {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String     @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(uuid())
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int     @default(1)
  size      String

  @@unique([cartId, productId, size]) // Prevent duplicate products in same cart
}

enum ProductCategory {
  MEN
  WOMEN
  KIDS
  UNISEX
}

enum Role {
  ADMIN
  CLIENT
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELED
}
